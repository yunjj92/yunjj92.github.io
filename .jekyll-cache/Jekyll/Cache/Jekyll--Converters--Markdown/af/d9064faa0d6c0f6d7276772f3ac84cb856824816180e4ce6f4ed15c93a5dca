  for(int i = 0; i&lt;tableRows; i ++;){
      console.log("fruitType[" + i +"]: " + dataArr[i].fruitType);
      console.log("price[" + i +"]: " + dataArr[i].price);
      console.log("brix[" + i +"]: " + dataArr[i].brix);
  }
</code></pre>

